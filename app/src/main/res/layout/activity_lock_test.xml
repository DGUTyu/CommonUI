<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".test.lockview.LockTestActivity">

    <com.wxdgut.uilibrary.lockview.PatternLockerView
        android:id="@+id/lock_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        app:plv_errorColor="#ED6969"
        app:plv_fillColor="#F1F1F1"
        app:plv_hitColor="#64C4D9"
        app:plv_lineWidth="3dp"
        app:plv_enableSkip="false"/>

    <com.wxdgut.uilibrary.lockview.PatternIndicatorView
        android:id="@+id/indicator_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        app:plv_errorColor="#ED6969"
        app:plv_fillColor="#F1F1F1"
        app:plv_hitColor="#64C4D9"
        app:plv_lineWidth="3dp" />

</LinearLayout>