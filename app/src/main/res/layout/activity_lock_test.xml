<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".test.lockview.LockTestActivity">

    <com.wxdgut.uilibrary.lockview.PatternIndicatorView
        android:id="@+id/indicator_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        app:piv_color="@color/black"
        app:piv_errorColor="#ED6969"
        app:piv_fillColor="#ffffff"
        app:piv_hitColor="#A48985"
        app:piv_rows="4"
        app:piv_lineWidth="1dp"/>

    <com.wxdgut.uilibrary.lockview.PatternLockerView
        android:id="@+id/lock_view"
        android:background="@color/light_gray"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        app:plv_color="@color/black"
        app:plv_innerColor="#D1C4C1"
        app:plv_innerPercent="0.3"
        app:plv_innerHitPercent="0.3"
        app:plv_errorColor="#ED6969"
        app:plv_fillColor="#ffffff"
        app:plv_hitColor="#A48985"
        app:plv_lineWidth="2dp"
        app:plv_lineAtTop="true"
        app:plv_rows="4"
        app:plv_enableSkip="false"/>

    <com.wxdgut.uilibrary.lockview.PatternLockerView
        android:background="@color/light_gray"
        android:id="@+id/lock_view2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        app:plv_color="@color/black"
        app:plv_innerColor="#D1C4C1"
        app:plv_innerPercent="0.3"
        app:plv_innerHitPercent="0.3"
        app:plv_errorColor="#ED6969"
        app:plv_fillColor="#ffffff"
        app:plv_hitColor="#A48985"
        app:plv_lineWidth="2dp"
        app:plv_enableSkip="false"/>

</LinearLayout>