<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 透明主题 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--  万能Dialog  -->
    <style name="My_Dialog_Theme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--  弹窗动画效果 向上弹出，向下退出  -->
    <style name="anim_dialog_upIn_downOut">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_out</item>
    </style>

    <!--  CommonPopup  -->
    <style name="RightPopAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_right_in</item>
        <item name="android:windowExitAnimation">@anim/anim_right_out</item>
    </style>

    <style name="RightTopPopAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_right_top_in</item>
        <item name="android:windowExitAnimation">@anim/anim_right_top_out</item>
    </style>

    <style name="RightTop2PopAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_right_top_in_2</item>
        <item name="android:windowExitAnimation">@anim/anim_right_top_out_2</item>
    </style>

    <style name="LeftTopPopAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_left_top_in</item>
        <item name="android:windowExitAnimation">@anim/anim_left_top_out</item>
    </style>

    <style name="LeftBottomPopAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_left_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_left_bottom_out</item>
    </style>

    <style name="RightBottomPopAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_right_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_right_bottom_out</item>
    </style>

    <style name="TopPopAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_top_in</item>
        <item name="android:windowExitAnimation">@anim/anim_top_out</item>
    </style>
    <style name="BottomPopAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_out</item>
    </style>

</resources>