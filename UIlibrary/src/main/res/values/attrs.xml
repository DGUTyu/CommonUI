<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- BannerView 轮播图控件  -->
    <declare-styleable name="bannerM">
        <attr name="defaultImageDrawable" format="reference" />
        <attr name="intervalTime" format="integer" />
        <attr name="indexPosition">
            <enum name="right" value="0x100" />
            <enum name="bottom" value="0x101" />
        </attr>
        <attr name="indexColor" format="color" />
    </declare-styleable>

    <!--指示器视图-->
    <declare-styleable name="PatternIndicatorView">
        <attr name="piv_color" format="color|reference" />
        <attr name="piv_hitColor" format="color|reference" />
        <attr name="piv_errorColor" format="color|reference" />
        <attr name="piv_fillColor" format="color|reference" />
        <attr name="piv_lineWidth" format="dimension|reference" />
    </declare-styleable>

    <!--锁屏视图-->
    <declare-styleable name="PatternLockerView">
        <!--默认不动时图案的颜色，即外圈颜色-->
        <attr name="plv_color" format="color|reference" />
        <!--动时图案的颜色，即外圈颜色加内点颜色-->
        <attr name="plv_hitColor" format="color|reference" />
        <!--动时下错误图案的颜色，即外圈颜色加内点颜色-->
        <attr name="plv_errorColor" format="color|reference" />
        <!--图案填充色，即中间的颜色-->
        <attr name="plv_fillColor" format="color|reference" />
        <!--图案的线宽-->
        <attr name="plv_lineWidth" format="dimension|reference" />
        <!--操作完延迟自动清除时长(单位ms)-->
        <attr name="plv_freezeDuration" format="integer|reference" />
        <!--自动清除绘制图案-->
        <attr name="plv_enableAutoClean" format="boolean|reference" />
        <!--是否跳过中间点-->
        <attr name="plv_enableSkip" format="boolean|reference" />
        <!--是否使用触碰震动反馈-->
        <attr name="plv_enableHapticFeedback" format="boolean|reference" />
    </declare-styleable>

    <!--ImageViewPro-->
    <declare-styleable name="ImageViewPro">
        <attr name="defaultColor" format="color"/>
    </declare-styleable>

    <!--SwitchView-->
    <declare-styleable name="SwitchView">
        <attr name="circlePadding" format="dimension" />
        <attr name="switchWidth" format="dimension" />
        <attr name="switchHeight" format="dimension" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="onColor" format="color" />
        <attr name="onColorBg" format="color" />
        <attr name="onAlpha" format="float" />
        <attr name="offColor" format="color" />
        <attr name="offColorBg" format="color" />
        <attr name="offAlpha" format="float" />
        <attr name="isChecked" format="boolean" />
    </declare-styleable>

    <!--公共属性-->
    <attr name="bgColor" format="color" />
    <attr name="bgColorPress" format="color" />
    <attr name="bgImg" format="reference" />
    <attr name="bgImgPress" format="reference" />
    <attr name="tvColor" format="color" />
    <attr name="tvColorPress" format="color" />
    <attr name="iconDrawable" format="reference" />
    <attr name="iconDrawablePress" format="reference" />
    <attr name="text" format="string" />
    <attr name="textSize" format="float" />
    <!--CommonButton-->
    <declare-styleable name="CommonButton">
        <attr name="bgColor" />
        <attr name="bgColorPress" />
        <attr name="bgImg" />
        <attr name="bgImgPress" />
        <attr name="tvColor" />
        <attr name="tvColorPress" />
        <attr name="fillet" format="boolean" />
        <attr name="radius" format="dimension" />
        <attr name="shape">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
            <enum name="line" value="2" />
            <enum name="ring" value="3" />
        </attr>
        <attr name="btnBorderWidth" format="dimension"/>
        <attr name="btnBorderColor" format="color"/>
        <attr name="btnSelectedBorderWidth" format="dimension"/>
        <attr name="btnSelectedBorderColor" format="color"/>
    </declare-styleable>

    <!--************** CommonImageView ****************-->
    <attr name="imgBorderWidth" format="dimension"/>
    <attr name="imgBorderColor" format="color"/>
    <attr name="imgSelectedMaskColor" format="color"/>
    <attr name="imgSelectedBorderColor" format="color"/>
    <attr name="imgSelectedBorderWidth" format="dimension"/>
    <attr name="imgCornerRadius" format="dimension"/>
    <attr name="imgIsOval" format="boolean"/>
    <attr name="imgIsCircle" format="boolean"/>
    <attr name="imgTouchSelectEnabled" format="boolean"/>
    <declare-styleable name="CommonImageView">
        <attr name="imgBorderWidth"/>
        <attr name="imgBorderColor"/>
        <attr name="imgSelectedMaskColor"/>
        <attr name="imgSelectedBorderColor"/>
        <attr name="imgSelectedBorderWidth"/>
        <attr name="imgCornerRadius"/>
        <attr name="imgIsOval"/>
        <attr name="imgIsCircle"/>
        <attr name="imgTouchSelectEnabled"/>
    </declare-styleable>

    <attr name="CommonImageViewStyle" format="reference"/>
</resources>