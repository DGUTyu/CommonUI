<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- BannerView 轮播图控件  -->
    <declare-styleable name="bannerM">
        <attr name="defaultImageDrawable" format="reference" />
        <attr name="intervalTime" format="integer" />
        <attr name="indexPosition">
            <enum name="right" value="0x100" />
            <enum name="bottom" value="0x101" />
        </attr>
        <attr name="indexColor" format="color" />
    </declare-styleable>

    <!--指示器视图-->
    <declare-styleable name="PatternIndicatorView">
        <attr name="piv_color" format="color|reference" />
        <attr name="piv_hitColor" format="color|reference" />
        <attr name="piv_errorColor" format="color|reference" />
        <attr name="piv_fillColor" format="color|reference" />
        <attr name="piv_lineWidth" format="dimension|reference" />
    </declare-styleable>

    <!--锁屏视图-->
    <declare-styleable name="PatternLockerView">
        <!--默认不动时图案的颜色，即外圈颜色-->
        <attr name="plv_color" format="color|reference" />
        <!--动时图案的颜色，即外圈颜色加内点颜色-->
        <attr name="plv_hitColor" format="color|reference" />
        <!--动时下错误图案的颜色，即外圈颜色加内点颜色-->
        <attr name="plv_errorColor" format="color|reference" />
        <!--图案填充色，即中间的颜色-->
        <attr name="plv_fillColor" format="color|reference" />
        <!--图案的线宽-->
        <attr name="plv_lineWidth" format="dimension|reference" />
        <!--操作完延迟自动清除时长(单位ms)-->
        <attr name="plv_freezeDuration" format="integer|reference" />
        <!--自动清除绘制图案-->
        <attr name="plv_enableAutoClean" format="boolean|reference" />
        <!--是否跳过中间点-->
        <attr name="plv_enableSkip" format="boolean|reference" />
        <!--是否使用触碰震动反馈-->
        <attr name="plv_enableHapticFeedback" format="boolean|reference" />
    </declare-styleable>

    <!--ImageViewPro-->
    <declare-styleable name="ImageViewPro">
        <attr name="defaultColor" format="color"/>
    </declare-styleable>

    <!--SwitchView-->
    <declare-styleable name="SwitchView">
        <attr name="circlePadding" format="dimension" />
        <attr name="switchWidth" format="dimension" />
        <attr name="switchHeight" format="dimension" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="onColor" format="color" />
        <attr name="onColorBg" format="color" />
        <attr name="onAlpha" format="float" />
        <attr name="offColor" format="color" />
        <attr name="offColorBg" format="color" />
        <attr name="offAlpha" format="float" />
        <attr name="isChecked" format="boolean" />
    </declare-styleable>

</resources>